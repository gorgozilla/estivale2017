<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="estipress">
		<fieldset name="estipress" label="PLG_USER_ESTIPRESS_SLIDER_LABEL">
			<field name="firstname" type="text"
				description="PLG_USER_ESTIPRESS_FIELD_FIRSTNAME_DESC"
				label="PLG_USER_ESTIPRESS_FIELD_FIRSTNAME_LABEL"
				class="form-control" />
			<field name="lastname" type="text"
				description="PLG_USER_ESTIPRESS_FIELD_LASTNAME_DESC"
				label="PLG_USER_ESTIPRESS_FIELD_LASTNAME_LABEL"
				class="form-control" />
			<field name="media" type="text"
				description="PLG_USER_ESTIPRESS_FIELD_MEDIA_DESC"
				label="PLG_USER_ESTIPRESS_FIELD_MEDIA_LABEL"
