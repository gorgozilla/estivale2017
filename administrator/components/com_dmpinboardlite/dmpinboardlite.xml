	<authorEmail>support@dmjoomlaextensions.com</authorEmail>
	<authorUrl>www.dmjoomlaextensions.com</authorUrl>
	<version>1.3.0</version>
	<description>"DM Pinboard Lite" is a pinterest-like view for Joomla! Articles. Create a new "DM Pinboard Lite" menu item and configure your pinterest view in a few clicks.</description>
	
	<scriptfile>script.php</scriptfile>	

	<files folder="site">
		<filename>dmpinboardlite.php</filename>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>helpers</folder>
		<folder>js</folder>
		<folder>tmpl</folder>
		<folder>views</folder>
	</files>
	
	<languages folder="site/language">
		<language tag="en-GB">en-GB.com_dmpinboardlite.ini</language>
	</languages>

	<administration>
		
		<menu>COM_DMPINBOARDLITE</menu>
		
		<files folder="admin">
			<filename>dmpinboardlite.php</filename>
            <folder>helpers</folder>
            <folder>views</folder>
            <folder>controllers</folder>
		</files>
		
		<languages folder="admin/language">
			<language tag="en-GB">en-GB.com_dmpinboardlite.ini</language>
			<language tag="en-GB">en-GB.com_dmpinboardlite.sys.ini</language>
		</languages>
		
